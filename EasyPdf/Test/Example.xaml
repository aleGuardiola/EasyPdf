<EDocument xmlns="clr-namespace:EasyPdf;assembly=EasyPdf" 
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           x:Class="Test.Example">

    <EPage x:Name="Page">
        <EParagraph>            
            <EText BackgroundColor="{x:Binding{}}" FontColor="Red">Hello</EText>
            <EText FontColor="Blue" Bold="True" Italic="True" Text=" World"></EText>
            <EText FontColor="Pink" Bold="True" Italic="True" Text="!!!!!!"></EText>
        </EParagraph> 
    </EPage>
    <EPage>`
        <EParagraph Height="100" >
            <EText 
                Bold="True" 
                BackgroundColor="Black" 
                FontSize="50"
                FontColor="White" >
                Hello World2!!
            </EText>
        </EParagraph>
    </EPage>
    
</EDocument>
